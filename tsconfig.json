{
    "compilerOptions": {
        "typeRoots": [
            // "./node_modules/@types",
            // "./node_modules/vuetify/types",
            "src/main/resources/definitions/"
        ],
        // "types": [
        //     "vuetify"
        // ],
        "lib": [
            "es2019",
            "DOM"
        ],
        "strict": true,
        "module": "esnext",
        "target": "esnext",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "jsx": "preserve",
        "jsxFactory": "h"
    },
    "include": [
        "./src/**/*.d.ts",
        "./src/**/*.ts",
        "./src/**/*.tsx",
        "./src/**/*.riot",
        "./src/**/*.vue",
    ],
    "exclude": [
        "node_modules"
    ]
}