{
    "compilerOptions": {
        "typeRoots": [
            "src/main/resources/definitions/"
        ],
        "lib": [
            "es2019",
            "DOM"
        ],
        "strict": true,
        "module": "esnext",
        "target": "esnext",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "jsx": "preserve",
        "jsxFactory": "h"
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.d.ts",
        "./src/**/*.riot",
        "./src/**/*.vue",
    ],
}